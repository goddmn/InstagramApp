<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingHorizontal="16dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:fontFamily="@font/helvetica_neue_cyr_bold"
            android:textColor="@color/black"
            android:text="pieroborgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:paddingEnd="16dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_avatar"
            android:layout_weight="1"
            android:src="@drawable/ic_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_posts_count"
                android:text="210"
                android:textSize="16.5sp"
                android:fontFamily="@font/helvetica_neue_cyr_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/helvetica_neue_cyr_light"
                android:textColor="@color/black"
                android:text="post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_follower_count"
                android:text="600"
                android:textSize="16.5sp"
                android:fontFamily="@font/helvetica_neue_cyr_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/helvetica_neue_cyr_light"
                android:textColor="@color/black"
                android:text="post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_following_count"
                android:text="500"
                android:textSize="16.5sp"
                android:fontFamily="@font/helvetica_neue_cyr_bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/helvetica_neue_cyr_light"
                android:textColor="@color/black"
                android:text="following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="14dp"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nickname"
            android:fontFamily="@font/helvetica_neue_cyr_bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Piero Borgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_user_bio"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/helvetica_neue_cyr_light"
            android:textColor="#252525"
            android:text="Product designer, founder of Leevia, Lego bricks lover."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_user_link"
            android:fontFamily="@font/helvetica_neue_cyr_light"
            android:textColor="#10467D"
            android:layout_marginTop="2dp"
            android:text="leevia.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:weightSum="2.1"
        android:layout_marginTop="13dp"
        android:paddingHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_follow"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="@font/helvetica_neue_cyr_bold"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:backgroundTint="#3898F3"
            android:background="@drawable/shape_profile_buttons"
            android:text="Follow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/btn_message"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_profile_buttons"
            android:fontFamily="@font/helvetica_neue_cyr_bold"
            android:text="Message"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_additional"
            android:layout_weight="0.2"
            android:src="@drawable/ic_additional"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_highlights"
        tools:itemCount="3"
        android:layout_marginTop="12dp"
        tools:listitem="@layout/item_highlights"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_photos"
        android:layout_marginTop="12dp"
        app:spanCount="3"
        tools:listitem="@layout/item_user_photos"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>