<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/img_item_user_profile"
        android:background="@drawable/shape_post_user_avatar"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_user_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/txt_item_user_name"
        android:letterSpacing="0.06"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/img_item_user_profile"
        android:layout_toEndOf="@id/img_item_user_profile"
        android:text="pieroborgo"
        android:fontFamily="@font/helvetica_neue_cyr_bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_item_post_location"
        android:layout_alignBottom="@id/img_item_user_profile"
        android:fontFamily="@font/helvetica_neue_cyr_light"
        android:layout_below="@id/txt_item_user_name"
        android:layout_alignStart="@id/txt_item_user_name"
        android:text="Florence, Italy"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_more"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@id/txt_item_post_location"
        android:layout_alignTop="@id/txt_item_user_name"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_post"
        android:background="#ccc"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txt_item_post_location"
        android:layout_width="match_parent"
        android:layout_height="340dp"/>

    <ImageView
        android:id="@+id/img_like"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"
        android:layout_below="@id/img_post"
        android:src="@drawable/ic_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_comment"
        android:layout_marginStart="16dp"
        android:layout_alignTop="@id/img_like"
        android:layout_toEndOf="@id/img_like"
        android:src="@drawable/ic_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_forward"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/img_comment"
        android:layout_alignTop="@id/img_like"
        android:src="@drawable/ic_direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_save"
        android:layout_marginEnd="12dp"
        android:layout_alignTop="@id/img_like"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_saved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_item_likes"
        android:textColor="@color/black"
        android:fontFamily="@font/helvetica_neue_cyr_light"
        android:textSize="14sp"
        android:layout_alignStart="@id/img_like"
        android:layout_marginTop="12dp"
        android:layout_below="@id/img_like"
        android:text="Liked by leeviahq and others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_item_post_user_name_and_description"
        android:layout_alignEnd="@id/img_save"
        android:layout_alignStart="@id/txt_item_likes"
        android:layout_below="@id/txt_item_likes"
        android:fontFamily="@font/helvetica_neue_cyr_light"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="pieroborgo 1, 2, 3 --> Challenge On! #ironhack #uxui #bootcamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>